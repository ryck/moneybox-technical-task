{
  "name": "moneybox-technical-task",
  "description": "A Next.js application showcasing financial product management with comprehensive testing and validation",
  "version": "1.0.0",
  "author": "Ricardo Gonzalez",
  "license": "MIT",
  "private": true,
  "keywords": [
    "nextjs",
    "react",
    "typescript",
    "financial",
    "products",
    "tanstack-query",
    "tailwindcss"
  ],
  "homepage": "https://github.com/ryck/moneybox-technical-task#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryck/moneybox-technical-task.git"
  },
  "bugs": {
    "url": "https://github.com/ryck/moneybox-technical-task/issues"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint && prettier --check .",
    "lint:fix": "eslint --fix && prettier --write .",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest --no-watchman",
    "test:watch": "jest --watch --no-watchman",
    "test:coverage": "jest --coverage --no-watchman",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run lint && npm run type-check && npm run test && npm run test:e2e",
    "clean": "rm -rf .next out coverage playwright-report test-results",
    "validate-products": "node scripts/validate-products.js",
    "precommit": "npm run lint && npm run type-check && npm run test"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-query-devtools": "^5.90.2",
    "framer-motion": "^12.23.22",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "typescript": "^5",
    "whatwg-fetch": "^3.6.20"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": false,
    "tabWidth": 2,
    "printWidth": 80,
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
